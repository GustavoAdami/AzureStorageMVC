@model AzureStorageMVC.Models.Smiley;
@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h4>Upload a smily face</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <span asp-validation-for="FileName" class="text-danger"></span>

        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="file" type="file">
                </div>
            </div>

            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>

        <hr />

        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-for="FileName" name="file" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Upload with asp-for</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
